<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/item_frame"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_delete_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_marginEnd="@dimen/inter_block_margin"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical|end"
            android:layout_height="@dimen/icon_size" />

        <RelativeLayout
            android:id="@+id/view_to_swipe"
            android:layout_width="match_parent"
            android:background="@color/app_white"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_country_name"
                android:textSize="@dimen/normal_text_size"
                android:layout_width="match_parent"
                tools:text="Nigeria"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/inter_view_margin"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_country_language_label"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginTop="@dimen/inter_view_margin"
                android:text="@string/language"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_country_language"
                android:textSize="@dimen/normal_text_size"
                tools:text="Igbo"
                android:layout_toEndOf="@+id/tv_country_language_label"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:layout_alignBaseline="@+id/tv_country_language_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_country_currency"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginTop="@dimen/inter_view_margin"
                tools:text="Naira"
                android:layout_toEndOf="@+id/tv_country_currency_label"
                android:layout_marginStart="@dimen/inter_view_margin"
                android:layout_alignParentEnd="true"
                android:gravity="start"
                android:layout_alignBaseline="@+id/tv_country_currency_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_country_currency_label"
                android:textSize="@dimen/normal_text_size"
                android:layout_below="@+id/tv_country_language_label"
                android:layout_marginTop="@dimen/inter_view_margin"
                android:text="@string/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </FrameLayout>
</layout>