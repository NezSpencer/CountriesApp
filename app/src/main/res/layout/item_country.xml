<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_country_name"
            android:textSize="@dimen/normal_text_size"
            android:layout_width="match_parent"
            tools:text="Nigeria"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_country_language_label"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:text="@string/language"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_country_language"
            android:textSize="@dimen/normal_text_size"
            tools:text="Igbo"
            android:layout_toEndOf="@+id/tv_country_language_label"
            android:layout_marginStart="@dimen/inter_view_margin"
            android:layout_alignParentEnd="true"
            android:gravity="start"
            android:layout_alignBaseline="@+id/tv_country_language_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_country_currency"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginTop="@dimen/inter_view_margin"
            tools:text="Naira"
            android:layout_toEndOf="@+id/tv_country_currency_label"
            android:layout_marginStart="@dimen/inter_view_margin"
            android:layout_alignParentEnd="true"
            android:gravity="start"
            android:layout_alignBaseline="@+id/tv_country_currency_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_country_currency_label"
            android:textSize="@dimen/normal_text_size"
            android:layout_below="@+id/tv_country_language_label"
            android:layout_marginTop="@dimen/inter_view_margin"
            android:text="@string/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</layout>